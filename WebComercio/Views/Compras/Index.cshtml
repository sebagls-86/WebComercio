@model IEnumerable<WebComercio.Compra>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Compras</h1>
</div>

<div class="container my-3">

    <div class="row">

        <div class="col -md-4">

            <div class="card my-2" style="width: 15rem;">
                <img src="~/IMG/compras/compras.jpg" class="card-img-top" alt="compras">
            </div>

        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col -md-12">
            <table class="table  my-2 text-center">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CompraId"><img src="~/IMG/usuarios/editar.png" data-bs-toggle="tooltip" title="Editar"></a>
                                <a asp-action="Details" asp-route-id="@item.CompraId"><img src="~/IMG/usuarios/detalles.png" data-bs-toggle="tooltip" title="Detalles"></a>
                                <a asp-action="Delete" asp-route-id="@item.CompraId"><img src="~/IMG/usuarios/eliminar.png" data-bs-toggle="tooltip" title="Eliminar"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>