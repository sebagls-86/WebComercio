@model WebComercio.Compra

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="row"> </div>
    <h1> <a asp-action="Index"><img src="~/IMG/usuarios/volver.png" data-bs-toggle="tooltip" title="Pagina anterior"></a> Editar Compra</h1>
</div>


<div class="container">
    <div class="row">
        <div class="container">
            <div class="col">
                <div class="col-md-10">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CompraId" />
                        <div class="form-group">
                            <label asp-for="CompraId" class="control-label">Id de Compra</label>
                            <input asp-for="CompraId" class="form-control" readonly />
                            <span asp-validation-for="CompraId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="idUsuario" class="control-label">Id de Usuario</label>
                            <input asp-for="idUsuario" class="form-control" readonly />
                            <span asp-validation-for="idUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Total" class="control-label"></label>
                            <input asp-for="Total" class="form-control" required/>
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>
                        <div class="form-group text-right">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
