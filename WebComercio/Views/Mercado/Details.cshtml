@model WebComercio.Producto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutMercado.cshtml";
}
<div class="container">

        <div>
            <h1> <a href="/Mercado/?identificador=@ViewBag.identificador"><img src="~/IMG/usuarios/volver.png" data-bs-toggle="tooltip" title="Pagina anterior"></a> Detalles</h1>
        </div>


        <h4 class="my-5">Producto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Precio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cantidad)
            </dd>
            <dt class="col-sm-2">
                Categoria
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cat.Nombre)
            </dd>
        </dl>

        <form asp-action="AgregarProducto" method="get">
            <input type="hidden" name="identificador" value="@ViewBag.identificador" />
            <input type="hidden" asp-for="ProductoId" />

            <div class="form-group d-flex">
                <label for="Cantidad" class="control-label"> <b> Ingrese una cantidad</b> </label>
                <input type="number" asp-for="Cantidad" min="1" max="@Html.ValueFor(model => model.Cantidad)" class="ml-5 pl-1" value="1">
            </div>

            <div class="row form-group col-4 pr-1">
                <input type="submit" value="Agregar" class="btn btn-primary btn-block" />
            </div>

        </form>

</div>

<div class="container">
    <div class="row">
        <div class="col-4">
            <form method="get" asp-action="Carro">
                <a class="btn btn-secondary btn-block" href="/Mercado/Carro/@ViewBag.identificador?identificador=@ViewBag.identificador">Ir al Carro</a>
                <input hidden name="identificador" value="@ViewBag.identificador" />
            </form>
        </div>
    </div>
</div>
