@model WebComercio.Usuario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutMercado.cshtml";
}

<div class="container my-5">
    <div class="row"> </div>
    <h1> <a href="/Mercado/MisDatos/@Model.UsuarioId?identificador=@Model.UsuarioId"><img src="~/IMG/usuarios/volver.png" data-bs-toggle="tooltip" title="Pagina anterior"></a> Editar Usuarios</h1>
</div>


<div class="container">
    <div class="row">
        <div class="container">
            <div class="col">
                <div class="col-md-10">
                    <form id="formDatos" asp-action="EditData">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UsuarioId" />
                        <div class="form-group">
                            <label asp-for="Cuil" class="control-label"></label>
                            <input asp-for="Cuil" class="form-control" readonly />
                            <span asp-validation-for="Cuil" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" required/>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" required/>
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail" class="control-label"></label>
                            <input asp-for="Mail" class="form-control" required/>
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="text-danger">
                            @ViewBag.Mensaje
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Contraseña actual</label>
                            <input asp-for="Password" type="password" class="form-control" required/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div id="error" class="oculta"><p id="messageError" class="messageError text-danger"></p></div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Nueva contraseña</label>
                            <input asp-for="Password" name="nueva1" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Repetir contraseña</label>
                            <input asp-for="Password" id="pass1" name="nueva2" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-right">
                            <input type="submit" value="Guardar" class="btn btn-primary " />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
