@model WebComercio.Categoria

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row"> </div>
    <h1> <a asp-action="Index"><img src="~/IMG/usuarios/volver.png" data-bs-toggle="tooltip" title="Pagina anterior"></a> Eliminar Categoria</h1>
</div>

<div class="container my-5">
    <div class="row">
        <div class="container">
            <h3>Usted esta a punto de eliminar una categoria</h3>
        </div>
    </div>
</div>

<div class="container my-3">
    <div class="row">
        <div class="container">
            <div class="col">

                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                    </dl>
            </div>
        </div>
    </div>
</div>

<div class="container my-3">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Delete" class="text-right">
                <input type="hidden" asp-for="CatId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>