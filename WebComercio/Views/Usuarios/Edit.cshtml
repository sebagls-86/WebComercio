@model WebComercio.Usuario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row"> </div>
    <h1> <a asp-action="Index"><img src="~/IMG/usuarios/volver.png" data-bs-toggle="tooltip" title="Pagina anterior"></a> Editar Usuarios</h1>
</div>

<div class="container">
    <div class="row">
        <div class="container">
            <div class="col">
                <div class="col-md-10">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UsuarioId" />
                        <div class="form-group">
                            <label asp-for="Cuil" class="control-label"></label>
                            <input asp-for="Cuil" class="form-control" required />
                            <span asp-validation-for="Cuil" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" required/>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" required/>
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail" class="control-label"></label>
                            <input asp-for="Mail" class="form-control" required/>
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" required/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MiCarro" class="control-label"></label>
                            <input asp-for="MiCarro" class="form-control" required/>
                            <span asp-validation-for="MiCarro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TipoUsuario" class="control-label"></label>
                            <input asp-for="TipoUsuario" class="form-control" required/>
                            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group">


                            <div class="form-check">
                                <div class="container">
                                    <div class="row">
                                        <label asp-for="Bloqueado" class="control-label"></label>
                                        <input asp-for="Bloqueado" class="form-check-input" type="checkbox">                                        
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="Bloqueado" class="text-danger"></span>
                        </div>
                        <div class="form-group text-right">
                            <input type="submit" value="Guardar" class="btn btn-primary " />
                        </div>
                    </form>
                    </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
