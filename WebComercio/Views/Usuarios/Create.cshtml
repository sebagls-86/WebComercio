@model WebComercio.Usuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row"> </div>
    <h1> <a asp-action="Index"><img src="~/IMG/usuarios/volver.png" data-bs-toggle="tooltip" title="Pagina anterior"></a> Crear Usuario</h1>
</div>
<div>

    @ViewBag.identificador
</div>
<div>
    @if (ViewBag.mensaje != null)
    {
        if (ViewBag.mensaje == "1")
        {
            <div class='alert alert-success alert-dismissable' id='alert'>
                <button type='button' class='close' data-dismiss='alert'>×</button>
                <strong>Usuario correctamente registrado</strong>

            </div>
        }
        else if (ViewBag.mensaje == "2")
        {
            <div class='alert alert-danger alert-dismissable' id='alert'>
                <button type='button' class='close' data-dismiss='alert'>×</button>
                <strong>Hubo un error al crear el usuario. Por favor intente nuevamente</strong>

            </div>
        }
        else if (ViewBag.mensaje == "3")
        {
            <div class='alert alert-danger alert-dismissable' id='alert'>
                <button type='button' class='close' data-dismiss='alert'>×</button>
                <strong>CUIL ya registrado</strong>

            </div>
        }

    }

</div>

<div class="container">
    <div class="row">
        <div class="container">
            <div class="col">
                <div class="col-md-10">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Cuil" class="control-label"></label>
                            <input asp-for="Cuil" class="form-control" required />
                            <span asp-validation-for="Cuil" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" required />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail" class="control-label"></label>
                            <input asp-for="Mail" class="form-control" required />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select TipoUsuario" name="TipoUsuario" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" required>
                                <option selected>Selecciona un tipo de persona</option>
                                <option value="1">Administrador</option>
                                <option value="2">Persona</option>
                                <option value="3">Empresa</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group text-right">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
